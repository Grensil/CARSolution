#!/bin/bash

# Skip if no Kotlin files are staged
STAGED_KT=$(git diff --cached --name-only --diff-filter=ACM | grep '\.kt$' || true)
if [ -z "$STAGED_KT" ]; then
    echo "âœ… No Kotlin files staged, skipping checks"
    exit 0
fi

echo "ğŸ”§ Running formatKotlin..."
./gradlew formatKotlin --daemon -q

if [ $? -ne 0 ]; then
    echo "âŒ formatKotlin failed"
    exit 1
fi

# Re-stage any files that were auto-formatted
git diff --name-only | grep '\.kt$' | xargs -r git add

echo "ğŸ” Running lintKotlin..."
./gradlew lintKotlin --daemon -q

if [ $? -ne 0 ]; then
    echo "âŒ ktlint check failed"
    exit 1
fi

echo "âœ… Pre-commit checks passed"
